<h1 class="titleb">new message</h1>

<%= simple_form_for([@message]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "message" }%>


  <div class="form-actions btn btn-primary">
    <%= f.button :submit, "Send" %>
  </div>
<% end %>
