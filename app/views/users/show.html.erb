<div class="container">
  <div class='home-cards__container'>
    <div class="card-left">
      <%= cl_image_tag @user&.photo.key, class:"card__image" %>
      <div class='card-left__name'>
        <p class="card__name"><%= @user.name %> <%= @user.last_name %></p>
        <p class="sport"><%= @user.sport.name %></p>
      </div>
      <div class='card-left__sport'>
        <i class="fal fa-volleyball-ball"></i>
        <p>volleyball Player</p>
        <p>Position: Libero</p>
        <div class='card-left__sport-info'>
          <div class='card-left__sport-info-weight'>
            <p>98KG</p>
            <p>Weight</p>
          </div>
          <div class='card-left__sport-info-height'>
            <p>1.94m</p>
            <p>Height</p>
          </div>
        </div>
      </div>
    </div>
    <div class="card-right">
      <div class="card-achievement-user">
        <i class="fal fa-trophy"></i>
        <h3>WINNER BEST PLAYER WORLD CUP 2023</h3>
        <p>1st place for best player for the national team...</p>
      </div>
      <div class="card-achievement-user">
        <i class="fal fa-trophy"></i>
        <h3>BEST PLAYER WORLD CUP 2023NOMINEE</h3>
        <p>These are the players for the national team...</p>
      </div>
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active d-flex">
            <img src="https://res.cloudinary.com/daaaaanx5/image/upload/c_fill,g_auto,h_250,w_970/b_rgb:000000,e_gradient_fade,y_-0.50/c_scale,co_rgb:ffffff,fl_relative,l_text:montserrat_25_style_light_align_center:Shop%20Now,w_0.5,y_0.18/v1670315730/development/IMG_0865_qpwaky.jpg" class="d-block w-50" alt="...">
          </div>
          <%# <div class="carousel-item">
            <img src="https://res.cloudinary.com/daaaaanx5/image/upload/w_1000,ar_16:9,c_fill,g_auto,e_sharpen/v1670315729/development/2019061111550383288_mrrbzn.jpg" class="d-block w-50" alt="...">
          </div> %>
          <%# <div class="carousel-item">
            <img src="https://res.cloudinary.com/daaaaanx5/image/upload/w_1000,ar_16:9,c_fill,g_auto,e_sharpen/v1670315730/development/IMG_0865_qpwaky.jpg" class="d-block w-50" alt="...">
          </div> %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>
</div>
