<div class="titleb">
  <h1>Offers matching your search</h1>
</div>
<div class="main-container card d-flex h-100" data-search-movies-target="list">
  <p class="h3">
    <div class="left-container w-50 h-100 p-3" style="background-color: red;">
      <% @offers.each do |offer| %>
        <%# insert offer card  %>
        <div class="container" style="zoom: 40%">
          <div class="card">
            <div class="card-left">
              <img src= "<%= offer.club.photo %>" alt="Person" class="card__image">
              <p class="card__name"><%= offer.title %>
              </p>
              <div class="sport">
                <%= "#{offer.fee} â‚¬" %>
              </div>
            </div>
            <div class="grid-container">
              <div class="description">
                <%= offer.description %></p>
            </div>
            <div class="titles">
              <div class="title">
                <%= offer.created_at.strftime("%a %b %e at %l:%M %p") %> <br>
                <%= offer.location %>
              </div>
              <div class="title" data-controller="apply">
                <button label="More info" data-apply-target="more_info_btn">
                  <i class="btn btn-primary" data-action="click->apply#displayInfo"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="right-container w-50 h-100" style="background-color: yellow;" data-controller="apply" data-edit-movie-target="side-pane">
  <%= render "side_pane", offer: @current_offer, marker: @marker %>
  </div>
