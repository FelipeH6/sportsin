
<div class="containerb">
  <div class="titleb">
    <h1>My applications</h1>
  </div>
  <% @applications.each do |application| %>
    <%# insert offer card  %>
    <div class="container myapps_cont">
      <div class="card ">
        <div class="card-left no_wrap">
          <img src= "<%= application.offer.club.photo %>" alt="Club" class="card__image">
          <p class="card__name"><%= application.offer.title %>
          </p>
          <div class="sport">
            <%= application.offer.club.name %>
          </div>
        </div>
        <div class="grid-container">
          <div class="description">
            <p><%= application.offer.description %></p>
        </div>
        <div class="titles">
          <div class="title">
            <%= application.status %>
          </div>
          <div class="title">
            <%= application.created_at.strftime("%a %b %e at %l:%M %p") %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
